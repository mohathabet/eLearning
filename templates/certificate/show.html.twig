{% extends 'base.html.twig' %}

{% block title %}Certificate{% endblock %}

{% block body %}
    <h1>Certificate</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ certificate.id }}</td>
            </tr>
            <tr>
                <th>Certificate Issued to</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>CertificateCode</th>
                <td>{{ certificate.certificateCode }}</td>
            </tr>
            <tr>
                <th>IssuedAt</th>
                <td>{{ certificate.issuedAt ? certificate.issuedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_certificate_index') }}">back to list</a>

    <a href="{{ path('app_certificate_edit', {'id': certificate.id}) }}">edit</a>

    {{ include('certificate/_delete_form.html.twig') }}
{% endblock %}
